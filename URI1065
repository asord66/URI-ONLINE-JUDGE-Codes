import java.util.Scanner;
import java.lang.StringBuilder;
import java.math.BigDecimal;

public class Main {
 
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        
        int soma=0;
        for (int i = 0; i < 5; i++) {
            int lido = sc.nextInt();
            
            if(lido%2==0){
                soma++;
            }
            
        }
        System.out.println(soma+" valores pares");
    }
}
